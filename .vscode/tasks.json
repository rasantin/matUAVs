{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compilar Projeto",
      "type": "process",
      "command": "cmd.exe",
      "args": [
        "/C", 
        "chcp 65001 > nul && .vscode\\build.bat"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    }
  ]
}